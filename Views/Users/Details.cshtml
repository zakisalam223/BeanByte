@model forum_aspcore.Models.FUser

@{
    ViewData["Title"] = "User Details";
    var infractions = ViewBag.Infractions as List<forum_aspcore.Models.FInfraction>;
    var isCurrentUser = ViewBag.isCurrentUser as bool?;
}

<div class="max-w-4xl mx-auto bg-gray-50 rounded-lg p-6 mt-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-4">User Details</h1>
    @if (Model.InfractionPoints >= 20)
    {
        <h1 class="text-red-600 font-bold text-2xl">BANNED</h1>
    }
    <div class="flex">
        <div class="w-1/3 flex flex-col items-start">
            <img src="@Url.Action("ProfilePicture", "Users", new { id = Model.UserID })" alt="Profile Picture" class="w-52 h-52 object-cover border-2 border-gray-300">
            <h2 class="text-lg font-bold text-gray-700 mt-2">@Model.Username</h2>
            <p class="text-sm text-gray-600">Reputation Power: @(Model.RepPower ?? 0)</p>
            <p class="text-sm text-gray-600">Reputation Points: @(Model.RepPoints ?? 0)</p>
            <p class="text-sm text-gray-600">Infraction Points: @(Model.InfractionPoints ?? 0)</p>
        </div>

        <div class="w-2/3 pl-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-2">Account Information</h3>
            <p class="text-gray-700"><strong>Email:</strong> @Model.Email</p>
            <p class="text-gray-700"><strong>Username:</strong> @Model.Username</p>
            <p class="text-gray-700"><strong>Degree:</strong> @(Model.Degree ?? "Not specified")</p>
            <p class="text-gray-700"><strong>Role:</strong> @(string.IsNullOrEmpty(Model.Title) ? "Not specified" : Model.Title)</p>
            @if (Model.Title == "Professor")
            {
                <p class="text-gray-700"><strong>Professor ID:</strong> @Model.AdminID</p>
                <p class="text-gray-700"><strong>Course Taught:</strong> @Model.Course</p>
            }
            else if (Model.Title == "TA")
            {
                <p class="text-gray-700"><strong>Course Taught:</strong> @Model.Course</p>
            }
            else if (Model.Title == "Student")
            {
                <p class="text-gray-700"><strong>UCID:</strong> @Model.UCID</p>
            }
            <p class="text-gray-700"><strong>Year of Degree:</strong> @(Model.YearOfDegree?.ToString() ?? "Not specified")</p>
            <p class="text-gray-700"><strong>Signature:</strong> @(Model.Signature ?? "No signature provided")</p>
            <p class="text-gray-700"><strong>Bio:</strong> @(Model.Bio ?? "No bio provided")</p>
        </div>
    </div>

    @* only show edit profile button if its their own profile *@
    @if (isCurrentUser != null && isCurrentUser == true){       
    <div class="my-8">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Settings</h3>
        <div class="pt-4">
            
            <a asp-controller="Users" asp-action="EditProfile" class="px-4 py-2 bg-pale-green text-white font-medium hover:bg-pale-green-dark">
                Edit Profile
            </a>
        </div>
    </div>
    }
    <h1 class="italic mb-5">Note: Once a user accumulates 20 or more infraction points, they will be automatically banned from accessing the forum</h1>
    @if (infractions == null || !infractions.Any())
    {
        <p class="text-gray-600">No infractions found for this user.</p>
    }
    else
    {
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200 rounded-lg">
                <thead class="bg-gray-100 border-b border-gray-300">
                    <tr>
                        <th class="px-4 py-2 text-left text-sm font-semibold text-gray-600">Date Given</th>
                        <th class="px-4 py-2 text-left text-sm font-semibold text-gray-600">Reason</th>
                        <th class="px-4 py-2 text-left text-sm font-semibold text-gray-600">Points</th>
                        <th class="px-4 py-2 text-left text-sm font-semibold text-gray-600">Issued By</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var infraction in infractions)
                    {
                        <tr class="border-b border-gray-200">
                            <td class="px-4 py-2 text-sm text-gray-700">@infraction.DateGiven.ToLocalTime().ToString("g")</td>
                            <td class="px-4 py-2 text-sm text-gray-700">@infraction.Reason</td>
                            <td class="px-4 py-2 text-sm text-gray-700">@infraction.InfPointsGiven</td>
                            <td class="px-4 py-2 text-sm text-gray-700">@infraction.GivenByUserID</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
